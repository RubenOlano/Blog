<%- include('partials/header')%>
<h1>Compose</h1>
<form method="post" action="/compose">
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input class="form-control form-control-lg" id="composeTitle" type="text" name="postTitle">
        <label for="composeBody">Post</label>
        <textarea class="form-control form-control-lg"  rows="5" cols="30" id="composeBody" type="text" name="postBody"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>
<%- include('partials/footer')%>